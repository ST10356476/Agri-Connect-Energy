@model Agri_Energy_Connect.ViewModels.FilterProductsViewModel

@{
    ViewData["Title"] = "Filter Products";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Filter Products</h1>
        <a asp-action="Products" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to All Products
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0"><i class="bi bi-funnel"></i> Filter Criteria</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="FilterProducts" method="post">
                        <div class="row g-3">
                            <div class="col-md-3 mb-3">
                                <label asp-for="FarmerId" class="form-label fw-medium">Farmer</label>
                                <select asp-for="FarmerId" class="form-select" asp-items="ViewBag.Farmers">
                                    <option value="">All Farmers</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="CategoryId" class="form-label fw-medium">Category</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">All Categories</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="StartDate" class="form-label fw-medium">Start Date</label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="EndDate" class="form-label fw-medium">End Date</label>
                                <input asp-for="EndDate" class="form-control" type="date" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductName" class="form-label fw-medium">Product Name</label>
                                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                            </div>
                            <div class="col-md-6 mb-3 d-flex align-items-end">
                                <div class="d-flex gap-2 w-100">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-search"></i> Apply Filters
                                    </button>
                                    <a asp-action="FilterProducts" class="btn btn-secondary w-100">
                                        <i class="bi bi-x-circle"></i> Reset
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0"><i class="bi bi-table"></i> Results</h4>
                    <span class="badge bg-primary">@Model.Products?.Count() products found</span>
                </div>
                <div class="card-body">
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="productsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Image</th>
                                        <th>Product Name</th>
                                        <th>Category</th>
                                        <th>Farmer</th>
                                        <th>Production Date</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@Url.Content(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "~/images/products/default.png")"
                                                     alt="@product.ProductName"
                                                     class="img-thumbnail"
                                                     style="width: 50px; height: 50px; object-fit: cover;" />
                                            </td>
                                            <td>@product.ProductName</td>
                                            <td>@(product.Category?.CategoryName ?? "N/A")</td>
                                            <td>
                                                <a asp-action="FarmerDetails" asp-route-id="@product.FarmerId" class="text-decoration-none">
                                                    @(product.Farmer?.FarmName ?? "Unknown")
                                                </a>
                                            </td>
                                            <td>@product.ProductionDate.ToString("d")</td>
                                            <td>@(product.Quantity.HasValue ? $"{product.Quantity} {product.UnitOfMeasure}" : "N/A")</td>
                                            <td>@(product.Price.HasValue ? $"{product.Price:C} {product.CurrencyCode}" : "N/A")</td>
                                            <td>
                                                <span class="badge @(product.IsAvailable ? "bg-success" : "bg-secondary")">
                                                    @(product.IsAvailable ? "Available" : "Not Available")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <button type="button" class="btn btn-outline-success" id="exportBtn">
                                <i class="bi bi-file-earmark-excel"></i> Export to Excel
                            </button>
                            <button type="button" class="btn btn-outline-danger" id="printBtn">
                                <i class="bi bi-printer"></i> Print Results
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                            <h5>No products match your filter criteria</h5>
                            <p class="text-muted">Try adjusting your filters or <a asp-action="Products" class="text-primary">view all products</a>.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <script>
        $(document).ready(function () {
            $('#productsTable').DataTable({
                pageLength: 10,
                responsive: true,
                dom: 'Bfrtip',
                buttons: ['copy', 'excel', 'pdf', 'print']
            });

            $("#printBtn").click(function () {
                window.print();
            });

            $("#exportBtn").click(function () {
                alert("Export functionality would be implemented here in the full application.");
            });
        });
    </script>
}
