@model Agri_Energy_Connect.ViewModels.FarmerViewModel

@{
    ViewData["Title"] = "Edit Farm Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Edit Farm Profile</h1>
                <a asp-action="Dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>

            <div class="card shadow">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Basic Information -->
                        <h4 class="text-success mb-3">Basic Information</h4>
                        <hr />
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FarmName" class="form-label fw-medium"></label>
                                <input asp-for="FarmName" class="form-control" />
                                <span asp-validation-for="FarmName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegistrationNumber" class="form-label fw-medium"></label>
                                <input asp-for="RegistrationNumber" class="form-control" />
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EstablishedDate" class="form-label fw-medium"></label>
                                <input asp-for="EstablishedDate" class="form-control" type="date" />
                                <span asp-validation-for="EstablishedDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProfileImage" class="form-label fw-medium"></label>
                                <input asp-for="ProfileImage" class="form-control" type="file" accept="image/*" />
                                <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                <small class="form-text text-muted">Leave empty to keep current image</small>

                                @if (!string.IsNullOrEmpty(Model.FarmName))
                                {
                                    <div class="mt-2">
                                        <label class="form-label fw-medium">Current Image:</label><br />
                                        <img src="~/uploads/@Model.ProfileImage" alt="Profile Image" class="img-thumbnail" style="max-height: 150px;" />
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Location -->
                        <h4 class="text-success mb-3">Location</h4>
                        <hr />
                        <div class="row mb-4">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Address" class="form-label fw-medium"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="City" class="form-label fw-medium"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Province" class="form-label fw-medium"></label>
                                <select asp-for="Province" class="form-select">
                                    <option value="">Select Province</option>
                                    <option value="Eastern Cape">Eastern Cape</option>
                                    <option value="Free State">Free State</option>
                                    <option value="Gauteng">Gauteng</option>
                                    <option value="KwaZulu-Natal">KwaZulu-Natal</option>
                                    <option value="Limpopo">Limpopo</option>
                                    <option value="Mpumalanga">Mpumalanga</option>
                                    <option value="North West">North West</option>
                                    <option value="Northern Cape">Northern Cape</option>
                                    <option value="Western Cape">Western Cape</option>
                                </select>
                                <span asp-validation-for="Province" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PostalCode" class="form-label fw-medium"></label>
                                <input asp-for="PostalCode" class="form-control" />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Farm Details -->
                        <h4 class="text-success mb-3">Farm Details</h4>
                        <hr />
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <label asp-for="FarmSize" class="form-label fw-medium"></label>
                                <input asp-for="FarmSize" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="FarmSize" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="FarmSizeUnit" class="form-label fw-medium"></label>
                                <select asp-for="FarmSizeUnit" class="form-select">
                                    <option value="">Select Unit</option>
                                    <option value="hectares">Hectares</option>
                                    <option value="acres">Acres</option>
                                    <option value="sq. km">Square Kilometers</option>
                                </select>
                                <span asp-validation-for="FarmSizeUnit" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="FarmingType" class="form-label fw-medium"></label>
                                <select asp-for="FarmingType" class="form-select" id="FarmingType">
                                    <option value="">Select Farming Type</option>
                                    <option value="Crop Farming">Crop Farming</option>
                                    <option value="Livestock Farming">Livestock Farming</option>
                                    <option value="Mixed Farming">Mixed Farming</option>
                                    <option value="Organic Farming">Organic Farming</option>
                                    <option value="Agroforestry">Agroforestry</option>
                                    <option value="Aquaculture">Aquaculture</option>
                                    <option value="Apiculture">Apiculture</option>
                                    <option value="Viticulture">Viticulture</option>
                                    <option value="Horticulture">Horticulture</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="FarmingType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MainCrops" class="form-label fw-medium"></label>
                                <input asp-for="MainCrops" class="form-control" placeholder="E.g. Maize, Wheat, Vegetables" />
                                <span asp-validation-for="MainCrops" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MainLivestock" class="form-label fw-medium"></label>
                                <input asp-for="MainLivestock" class="form-control" placeholder="E.g. Cattle, Sheep, Poultry" />
                                <span asp-validation-for="MainLivestock" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Sustainability & Energy -->
                        <h4 class="text-success mb-3">Sustainability & Energy</h4>
                        <hr />
                        <div class="row mb-4">
                            <div class="col-md-12 mb-3">
                                <label asp-for="SustainabilityPractices" class="form-label fw-medium"></label>
                                <textarea asp-for="SustainabilityPractices" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="SustainabilityPractices" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="EnergyNeeds" class="form-label fw-medium"></label>
                                <textarea asp-for="EnergyNeeds" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="EnergyNeeds" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Farm Description -->
                        <h4 class="text-success mb-3">Farm Description</h4>
                        <hr />
                        <div class="row mb-4">
                            <div class="col-md-12 mb-3">
                                <label asp-for="ProfileDescription" class="form-label fw-medium"></label>
                                <textarea asp-for="ProfileDescription" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="ProfileDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Dashboard" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("FarmingType").addEventListener("change", function () {
            const otherInput = document.getElementById("OtherFarmingTypeInput");
            if (this.value === "Other") {
                otherInput.style.display = "block";
            } else {
                otherInput.style.display = "none";
            }
        });
    </script>
}
