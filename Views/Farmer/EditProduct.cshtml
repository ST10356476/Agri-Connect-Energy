@model Agri_Energy_Connect.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Edit Product</h1>
                <a asp-action="Products" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Products
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title fs-4 mb-0">Update Product Information</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProductId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="ProductName" class="form-label fw-medium"></label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label fw-medium"></label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">Select Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ProductionDate" class="form-label fw-medium"></label>
                                <input asp-for="ProductionDate" class="form-control" type="date" />
                                <span asp-validation-for="ProductionDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Quantity" class="form-label fw-medium"></label>
                                <input asp-for="Quantity" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UnitOfMeasure" class="form-label fw-medium"></label>
                                <select asp-for="UnitOfMeasure" class="form-select">
                                    <option value="">Select Unit</option>
                                    <option value="kg">Kilograms (kg)</option>
                                    <option value="ton">Tons</option>
                                    <option value="lb">Pounds (lb)</option>
                                    <option value="g">Grams (g)</option>
                                    <option value="l">Liters (l)</option>
                                    <option value="ml">Milliliters (ml)</option>
                                    <option value="count">Count</option>
                                    <option value="bale">Bales</option>
                                    <option value="dozen">Dozen</option>
                                    <option value="box">Boxes</option>
                                </select>
                                <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Price" class="form-label fw-medium"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label fw-medium"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="SustainabilityFeatures" class="form-label fw-medium"></label>
                                <textarea asp-for="SustainabilityFeatures" class="form-control" rows="3" placeholder="Describe the sustainability aspects of this product, such as organic cultivation methods, water conservation, etc."></textarea>
                                <span asp-validation-for="SustainabilityFeatures" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="OrganicCertified" class="form-check-input" />
                                    <label asp-for="OrganicCertified" class="form-check-label"></label>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ProductImage" class="form-label fw-medium"></label>
                                    <input asp-for="ProductImage" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                                    <small class="form-text text-muted">Leave empty to keep current image</small>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ProductName))
                                {
                                    <div class="text-center">
                                        <img src="@Model.ProductImage]" alt="@Model.ProductName" class="img-thumbnail" style="max-height: 100px;">
                                        <small class="d-block text-muted">Current image</small>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                                <i class="bi bi-trash"></i> Delete Product
                            </button>
                            <div>
                                <a asp-action="Products" class="btn btn-outline-secondary me-2">Cancel</a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-save"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the product "@Model.ProductName"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteProduct" asp-route-id="@Model.ProductId" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}