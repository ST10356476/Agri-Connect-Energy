@model Agri_Energy_Connect.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title">Add New Product</h2>
                </div>
                <div class="card-body">
                    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="ProductName" class="form-label"></label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label"></label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">Select Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ProductionDate" class="form-label"></label>
                                <input asp-for="ProductionDate" class="form-control" type="date" />
                                <span asp-validation-for="ProductionDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Quantity" class="form-label"></label>
                                <input asp-for="Quantity" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UnitOfMeasure" class="form-label"></label>
                                <select asp-for="UnitOfMeasure" class="form-select">
                                    <option value="">Select Unit</option>
                                    <option value="kg">Kilograms (kg)</option>
                                    <option value="ton">Tons</option>
                                    <option value="lb">Pounds (lb)</option>
                                    <option value="g">Grams (g)</option>
                                    <option value="l">Liters (l)</option>
                                    <option value="ml">Milliliters (ml)</option>
                                    <option value="count">Count</option>
                                    <option value="bale">Bales</option>
                                    <option value="dozen">Dozen</option>
                                    <option value="box">Boxes</option>
                                </select>
                                <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="SustainabilityFeatures" class="form-label"></label>
                                <textarea asp-for="SustainabilityFeatures" class="form-control" rows="3" placeholder="Describe the sustainability aspects of this product, such as organic cultivation methods, water conservation, etc."></textarea>
                                <span asp-validation-for="SustainabilityFeatures" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="OrganicCertified" class="form-check-input" />
                                    <label asp-for="OrganicCertified" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ProductImage" class="form-label"></label>
                                <input asp-for="ProductImage" class="form-control" type="file" accept="image/*" />
                                <span asp-validation-for="ProductImage" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Add Product</button>
                            <a asp-action="Products" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}