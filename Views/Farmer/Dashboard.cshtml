@model Agri_Energy_Connect.ViewModels.FarmerDashboardViewModel

@{
    ViewData["Title"] = "Farmer Dashboard";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agri-Energy Connect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Welcome, @Model.Farmer.FarmName</h1>
                <a asp-action="Edit" class="btn btn-outline-success">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
            </div>
            <hr />
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.Farmer.ProfileImageUrl))
                    {
                        <img src="@Model.Farmer.ProfileImageUrl" alt="@Model.Farmer.FarmName" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="~/images/farmers/default.png" alt="@Model.Farmer.FarmName" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    <h3>@Model.Farmer.FarmName</h3>
                    <p class="text-muted">@Model.Farmer.FarmingType</p>
                    <p>@Model.Farmer.City, @Model.Farmer.Province</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h4>Farm Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Established:</strong> @(Model.Farmer.EstablishedDate.HasValue ? Model.Farmer.EstablishedDate.Value.ToString("MMMM yyyy") : "Not specified")</p>
                            <p><strong>Registration:</strong> @(string.IsNullOrEmpty(Model.Farmer.RegistrationNumber) ? "Not specified" : Model.Farmer.RegistrationNumber)</p>
                            <p><strong>Farm Size:</strong> @(Model.Farmer.FarmSize.HasValue ? $"{Model.Farmer.FarmSize} {Model.Farmer.FarmSizeUnit}" : "Not specified")</p>
                            <p><strong>Main Crops:</strong> @(string.IsNullOrEmpty(Model.Farmer.MainCrops) ? "Not specified" : Model.Farmer.MainCrops)</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Location:</strong> @Model.Farmer.Address, @Model.Farmer.City, @Model.Farmer.Province @Model.Farmer.PostalCode</p>
                            <p><strong>Main Livestock:</strong> @(string.IsNullOrEmpty(Model.Farmer.MainLivestock) ? "Not specified" : Model.Farmer.MainLivestock)</p>
                            <p><strong>Farming Type:</strong> @Model.Farmer.FarmingType</p>
                            <p><strong>Verification Status:</strong> @(Model.Farmer.IsVerified ? "Verified" : "Pending Verification")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h4>My Products</h4>
                    <a asp-action="AddProduct" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Product
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.RecentProducts != null && Model.RecentProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Category</th>
                                        <th>Production Date</th>
                                        <th>Quantity</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.RecentProducts.Take(5))
                                    {
                                        <tr>
                                            <td>@product.ProductName</td>
                                            <td>@product.Category.CategoryName</td>
                                            <td>@product.ProductionDate.ToString("d")</td>
                                            <td>@(product.Quantity.HasValue ? $"{product.Quantity} {product.UnitOfMeasure}" : "N/A")</td>
                                            <td>
                                                <a asp-action="EditProduct" asp-route-id="@product.ProductId" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@product.ProductId">
                                                    <i class="bi bi-trash"></i>
                                                </button>

                                                <!-- Delete Confirmation Modal -->
                                                <div class="modal fade" id="deleteModal-@product.ProductId" tabindex="-1" aria-labelledby="deleteModalLabel-@product.ProductId" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="deleteModalLabel-@product.ProductId">Confirm Delete</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to delete the product "@product.ProductName"?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <form asp-action="DeleteProduct" asp-route-id="@product.ProductId" method="post">
                                                                    @Html.AntiForgeryToken()
                                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-action="Products" class="btn btn-outline-success">View All Products</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <div class="mb-3">
                                <i class="bi bi-basket text-muted" style="font-size: 3rem;"></i>
                            </div>
                            <h5>No products added yet</h5>
                            <p class="text-muted">Start adding your agricultural products to showcase to the community.</p>
                            <a asp-action="AddProduct" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Add Your First Product
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h4>Sustainability Practices</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Farmer.SustainabilityPractices))
                    {
                        <p>@Model.Farmer.SustainabilityPractices</p>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No sustainability practices specified yet.</p>
                            <a asp-action="Edit" class="btn btn-outline-success btn-sm">
                                Add Sustainability Practices
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h4>Energy Needs</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Farmer.EnergyNeeds))
                    {
                        <p>@Model.Farmer.EnergyNeeds</p>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No energy needs specified yet.</p>
                            <a asp-action="Edit" class="btn btn-outline-success btn-sm">
                                Specify Energy Needs
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>