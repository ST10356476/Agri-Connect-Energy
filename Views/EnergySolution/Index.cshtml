@section Scripts {
    <script>
        // Category filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const filterButtons = document.querySelectorAll('.category-filter');
            const sections = {
                'all': ['solar-section', 'wind-section', 'biogas-section', 'efficiency-section'],
                'solar': ['solar-section'],
                'wind': ['wind-section'],
                'biogas': ['biogas-section'],
                'efficiency': ['efficiency-section']
            };

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');

                    // Update button states
                    filterButtons.forEach(btn => btn.classList.remove('btn-success'));
                    filterButtons.forEach(btn => btn.classList.add('btn-outline-success'));
                    this.classList.remove('btn-outline-success');
                    this.classList.add('btn-success');

                    // Show/hide sections
                    Object.keys(sections).forEach(sectionCategory => {
                        sections[sectionCategory].forEach(sectionId => {
                            const section = document.getElementById(sectionId);
                            if (section) {
                                section.style.display = 'none';
                            }
                        });
                    });

                    if (sections[category]) {
                        sections[category].forEach(sectionId => {
                            const section = document.getElementById(sectionId);
                            if (section) {
                                section.style.display = 'block';
                            }
                        });
                    }
                });
            });

            // Modal functionality (placeholder)
            const modal = document.getElementById('solutionModal');
            modal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const solution = button.getAttribute('data-solution');

                // You would load content based on the solution type
                const modalContent = document.getElementById('modalContent');
                modalContent.innerHTML = `<p>Loading details for ${solution}...</p>`;

                // Simulate loading content
                setTimeout(() => {
                    modalContent.innerHTML = getSolutionDetails(solution);
                }, 500);
            });
        });

        function getSolutionDetails(solution) {
            const details = {
                'solar-pv': `
                    <h4>Agricultural Solar PV Systems</h4>
                    <p>Complete photovoltaic systems designed specifically for farm operations.</p>
                    <h5>Features:</h5>
                    <ul>
                        <li>Configurations: 5kW, 10kW, and 25kW systems</li>
                        <li>Includes: PV panels, inverter, mounting hardware, monitoring system</li>
                        <li>Professional installation included</li>
                        <li>25-year warranty on panels</li>
                    </ul>
                    <h5>Benefits:</h5>
                    <ul>
                        <li>Reduce electricity costs by up to 90%</li>
                        <li>Low maintenance requirements</li>
                        <li>ROI within 4-6 years</li>
                        <li>Environmental impact reduction</li>
                    </ul>
                `
                // Add more solution details as needed
            };

            return details[solution] || `<p>Details for ${solution} are not available yet.</p>`;
        }

        function requestQuote() {
            // Redirect to quote request page
            window.location.href = '@Url.Action("RequestQuote", "EnergySolution")';
        }
    </script>
}