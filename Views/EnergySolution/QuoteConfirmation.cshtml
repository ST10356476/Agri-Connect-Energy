@model Agri_Energy_Connect.ViewModels.QuoteConfirmationViewModel

@{
    ViewData["Title"] = "Quote Request Confirmed";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h1 class="fw-bold text-success">Quote Request Submitted!</h1>
                <p class="lead text-muted">Thank you for your interest in renewable energy solutions</p>
            </div>

            <div class="card shadow">
                <div class="card-body p-4">
                    <h3 class="h5 mb-4">What happens next?</h3>

                    <div class="timeline">
                        <div class="timeline-item d-flex align-items-start mb-4">
                            <div class="timeline-marker bg-success text-white rounded-circle me-3" style="width: 40px; height: 40px; line-height: 40px; text-align: center;">
                                <span>1</span>
                            </div>
                            <div>
                                <h6 class="mb-1">Quote Review</h6>
                                <p class="text-muted mb-0">Our team will review your requirements and match you with the most suitable energy providers.</p>
                                <small class="text-muted">Within 2 hours</small>
                            </div>
                        </div>

                        <div class="timeline-item d-flex align-items-start mb-4">
                            <div class="timeline-marker bg-primary text-white rounded-circle me-3" style="width: 40px; height: 40px; line-height: 40px; text-align: center;">
                                <span>2</span>
                            </div>
                            <div>
                                <h6 class="mb-1">Provider Contact</h6>
                                <p class="text-muted mb-0">Our verified energy providers will contact you with customized quotes and solutions.</p>
                                <small class="text-muted">Within 24 hours</small>
                            </div>
                        </div>

                        <div class="timeline-item d-flex align-items-start mb-4">
                            <div class="timeline-marker bg-info text-white rounded-circle me-3" style="width: 40px; height: 40px; line-height: 40px; text-align: center;">
                                <span>3</span>
                            </div>
                            <div>
                                <h6 class="mb-1">Site Assessment</h6>
                                <p class="text-muted mb-0">Selected providers will arrange for on-site assessments to provide accurate quotes.</p>
                                <small class="text-muted">Within 3-5 business days</small>
                            </div>
                        </div>

                        <div class="timeline-item d-flex align-items-start">
                            <div class="timeline-marker bg-warning text-white rounded-circle me-3" style="width: 40px; height: 40px; line-height: 40px; text-align: center;">
                                <span>4</span>
                            </div>
                            <div>
                                <h6 class="mb-1">Project Installation</h6>
                                <p class="text-muted mb-0">Once you select a provider, we'll support you through the installation process.</p>
                                <small class="text-muted">Timeline varies by solution</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quote Summary -->
            @if (Model.QuoteRequest != null)
            {
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Your Quote Request Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> @Model.QuoteRequest.Name</p>
                                <p><strong>Email:</strong> @Model.QuoteRequest.Email</p>
                                <p><strong>Phone:</strong> @Model.QuoteRequest.PhoneNumber</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Farm Size:</strong> @(Model.QuoteRequest.FarmSize?.ToString("F1") ?? "Not specified") hectares</p>
                                <p><strong>Current Usage:</strong> @(Model.QuoteRequest.CurrentEnergyUsage?.ToString() ?? "Not specified") kWh/month</p>
                                <p><strong>Preferred Contact:</strong> @Model.QuoteRequest.PreferredContact</p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <p><strong>Additional Requirements:</strong></p>
                            <p class="text-muted">@(Model.QuoteRequest.AdditionalRequirements ?? "None specified")</p>
                        </div>
                    </div>
                </div>
            }

            <!-- Action Buttons -->
            <div class="text-center mt-5">
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-lg me-md-2">
                        <i class="bi bi-house"></i> Return to Home
                    </a>
                    <a asp-controller="EnergySolution" asp-action="Index" class="btn btn-success btn-lg">
                        <i class="bi bi-lightning"></i> Browse More Solutions
                    </a>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="mt-5">
                <div class="card border-0 bg-light">
                    <div class="card-body p-4">
                        <h3 class="h5 text-center mb-4">Frequently Asked Questions</h3>

                        <div class="accordion" id="faqAccordion">
                            <div class="accordion-item border-0 mb-3">
                                <h2 class="accordion-header" id="faq1">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#answer1" aria-expanded="false" aria-controls="answer1">
                                        How much does a renewable energy system cost?
                                    </button>
                                </h2>
                                <div id="answer1" class="accordion-collapse collapse" aria-labelledby="faq1" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Costs vary depending on your energy needs, farm size, and chosen technology. Solar systems typically start from R60,000, wind systems from R80,000, and biogas digesters from R30,000. Our providers will give you accurate quotes based on your specific requirements.
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item border-0 mb-3">
                                <h2 class="accordion-header" id="faq2">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#answer2" aria-expanded="false" aria-controls="answer2">
                                        How long does installation take?
                                    </button>
                                </h2>
                                <div id="answer2" class="accordion-collapse collapse" aria-labelledby="faq2" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Installation times vary by system complexity. Solar installations typically take 1-3 days, wind turbines 2-5 days, and biogas digesters 1-2 weeks. Your chosen provider will give you a detailed timeline during the assessment.
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item border-0">
                                <h2 class="accordion-header" id="faq3">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#answer3" aria-expanded="false" aria-controls="answer3">
                                        What maintenance is required?
                                    </button>
                                </h2>
                                <div id="answer3" class="accordion-collapse collapse" aria-labelledby="faq3" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Most renewable energy systems require minimal maintenance. Solar panels need cleaning every 3-6 months, wind turbines require annual inspections, and biogas digesters need regular feeding and monitoring. All our providers offer maintenance packages.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>